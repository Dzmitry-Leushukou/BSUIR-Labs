<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:Lab_5_6.ViewModels"
             x:DataType="vm:OrderViewModel"
             x:Class="Lab_5_6.Pages.OrdersPage"
             xmlns:local="clr-namespace:Lab_5_6.ValueConverters"
             xmlns:entities="clr-namespace:Domain.Entities;assembly=Leushukou353504.Domain"
             Title="OrdersPage">
    <ContentPage.Resources>
        <local:DevelopmentLevelToColorConverter x:Key="DevelopmentLevelToColorConverter"/>
    </ContentPage.Resources>
    <VerticalStackLayout Padding="10" Spacing="10">
        <Button Text="Add New Order" Command="{Binding AddOrderCommand}"/>
        <Button Text="Add Pizza to Selected Order" Command="{Binding AddPizzaCommand}" IsEnabled="{Binding IsOrderSelected}"/>
        <Picker Title="Select order"
                ItemsSource="{Binding Orders}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedOrder}"
                SelectedIndexChanged="OnOrderSelected"/>
        <ScrollView>
            <CollectionView ItemsSource="{Binding Pizzas}" HeightRequest="500">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="entities:Pizza">
                        <Border StrokeThickness="2"
                        Stroke="{Binding Time, Converter={StaticResource DevelopmentLevelToColorConverter}}"
                        Margin="5">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=ShowDetailsCommand}"
                                             CommandParameter="{Binding}"/>
                            </Border.GestureRecognizers>
                            <Grid Padding="10" RowDefinitions="Auto,Auto,Auto">
                                <Image Source="{Binding ImagePath}" HeightRequest="100" Grid.Row="1"/>
                                <Label Text="{Binding Name}" FontSize="16" Grid.Row="0" HorizontalOptions="Center" 
                               HorizontalTextAlignment="Center"/>
                                <Label Text="{Binding Time, StringFormat='Time: {0} Minutes'}" Grid.Row="2" HorizontalOptions="Center" 
                               HorizontalTextAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>