<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Lab_5_6.ViewModels"
             x:DataType="vm:AddPizzaViewModel"
             x:Class="Lab_5_6.Pages.AddPizzaPage"
             Title="Add Pizza">
    <VerticalStackLayout Padding="20">
        <Entry Placeholder="Pizza Name" Text="{Binding Name}"/>
        <Entry Placeholder="Image Path" Text="{Binding ImagePath}"/>
        <Label Text="Cooking time:"/>
        <Entry Text="{Binding Time}"/>
        <Button Text="Save" Command="{Binding SavePizzaCommand}"/>
    </VerticalStackLayout>
</ContentPage>