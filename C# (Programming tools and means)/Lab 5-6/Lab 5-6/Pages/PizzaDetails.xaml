<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab_5_6.Pages.PizzaDetails"
             Title="PizzaDetails">
    <VerticalStackLayout Padding="20">
        <Image Source="{Binding Pizza.ImagePath}" HeightRequest="300" WidthRequest="300" HorizontalOptions="Center"/>
        <Label Text="{Binding Pizza.Name, StringFormat='Name: {0}'}" FontSize="18" HorizontalOptions="Center"/>
        <Label Text="{Binding Pizza.Time, StringFormat='Time: {0}'}" FontSize="18" HorizontalOptions="Center"/>
        <Label Text="{Binding Pizza.OrderId, StringFormat='Order ID: {0}'}" HorizontalOptions="Center" FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>