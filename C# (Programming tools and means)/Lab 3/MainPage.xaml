<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab_1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label x:Name="DisplayLabel"
               Text="0"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="48"
                />
            <BoxView HeightRequest="2" 
                  BackgroundColor="Black" 
                  HorizontalOptions="Fill" />
            <Grid RowSpacing="10" ColumnSpacing="10" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Text="1" Grid.Row="1" Grid.Column="0" Clicked="PressButton" />
                <Button Text="2" Grid.Row="1" Grid.Column="1" Clicked="PressButton" />
                <Button Text="3" Grid.Row="1" Grid.Column="2" Clicked="PressButton" />

                <Button Text="4" Grid.Row="2" Grid.Column="0" Clicked="PressButton" />
                <Button Text="5" Grid.Row="2" Grid.Column="1" Clicked="PressButton" />
                <Button Text="6" Grid.Row="2" Grid.Column="2" Clicked="PressButton" />

                <Button Text="7" Grid.Row="3" Grid.Column="0" Clicked="PressButton" />
                <Button Text="8" Grid.Row="3" Grid.Column="1" Clicked="PressButton" />
                <Button Text="9" Grid.Row="3" Grid.Column="2" Clicked="PressButton" />

                <Button Text="exp(x)" Grid.Row="4" Grid.Column="0" Clicked="PressButton" />
                <Button Text="0" Grid.Row="4" Grid.Column="1" Clicked="PressButton" />
                <Button Text="," Grid.Row="4" Grid.Column="2" Clicked="PressButton" />
                <Button Text="C" Grid.Row="4" Grid.Column="3" Clicked="PressButton" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
